pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jyothi5579_jenkins')
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/jsilaparasetti/jenkins_repo.git'
            }
        }
        stage('Build docker image') {
            steps {
                sh "docker build -t galaxy/nodeapp:$BUILD_NUMBER ."
            }
        }
        stage('Login to DockerHub') {
            steps {
                script {
                    def dockerHubCreds = credentials('jyothi5579_jenkins')
                    sh "echo ${dockerHubCreds.PSW} | docker login -u ${dockerHubCreds.USR} --password-stdin"
                }
            }
        }
    }
}
